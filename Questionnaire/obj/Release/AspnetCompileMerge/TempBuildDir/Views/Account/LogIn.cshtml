@model LoginModel

@{
	Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="container login-container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4 panel panel-default">
			<h1 class="text-center login-title">
				<img src="~/Content/images/logo-ge.png" />
			</h1>
			<br />			
			<div class="account-wall">
				@using(Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form", @class = "form-signin" })) {
					@Html.TextBoxFor(x => Model.Username, new { @class = "form-control", placeholder = "მომხმარებელი", required = "", autofocus = "" })
					@Html.PasswordFor(x => Model.Password, new { @class = "form-control", placeholder = "პაროლი", required = "" })
					<button class="btn btn-lg btn-primary btn-block" type="submit">
						შესვლა
					</button>
				}
			</div>
			<br />
		</div>
	</div>
</div>

@section scripts{
	@if(!string.IsNullOrEmpty(Model.ErrorMessage)) {
		<script>
			$(function () {
				var errors = [];
				errors.push({ errorMessage: '@Model.ErrorMessage' });
				questionnaire.showErrors(errors);

				$('#login-form').submit(function () {
					questionnaire.hideErrors();
				})
			})
		</script>
	}
}