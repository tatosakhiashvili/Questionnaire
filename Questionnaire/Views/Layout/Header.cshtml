<div class="container-fluid nopadding">
	<div class="msisdn row">
		<div class="col-lg-12">
			<div class="row">

				<div class="msisdn-internal-item msisdn-container">
					<div class="double-labels">
						<label>MSISDN</label>
						<label class="lblBalanceInsider"></label>
					</div>
					<input id="msisdn-number" type="text" class="form-control" value="@QuestionnaireContext.Current.CallMobile">
					<button type="button" title="ბალანსის გაგება" onclick="questionaireTree.getMsisdn($('#msisdn-number').val())" class="btn btn-primary">
						<span class="glyphicon glyphicon-usd"></span>
					</button>
					<label id="lblBalance" class="lblBalanceInsider"></label>
				</div>

				<div class="msisdn-internal-item sms-sender-content">
					<label>SMS</label>
					<input type="text" class="form-control" id="txt-custom-sms-sender" />
					<button title="SMS გაგზავნა" type="button" onclick="questionaireTree.sendSms(true);" class="btn btn-primary"><span class="glyphicon glyphicon-send"></span></button>
				</div>

				<div class="msisdn-internal-item">
					<div class="lblChanger"></div>
					<div class="inputChanger"></div>
					<button title="რეგისტრაცია" type="button" onclick="questionaireTree.registerMsisdn($('#msisdn-number').val(), $('#SelectedNodeId').val())" class="btn btn-primary btn-register"><span class="glyphicon glyphicon-saved"></span></button>
				</div>
			</div>
		</div>

	</div>
</div>